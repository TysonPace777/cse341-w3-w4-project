{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "contacts api",
    "version": "1.0.0"
  },
  "host": "cse341-w3-w4-project-jv0g.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/games": {
      "get": {
        "description": "Get all games",
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "description": "Add a new videogame",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "price": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["name", "price", "description"]
            }
          }
        ],
        "responses": {
          "204": { "description": "Videogame created successfully" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/games/{id}": {
      "get": {
        "description": "Get a videogame by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "put": {
        "description": "Update a videogame",
        "consumes": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "price": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["name", "price", "description"]
            }
          }
        ],
        "responses": {
          "204": { "description": "Videogame updated successfully" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a videogame by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "204": { "description": "Videogame deleted successfully" } }
      }
    },
    "/user": {
      "post": {
        "description": "Add a new user",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "username": { "type": "string" },
                "email": { "type": "string", "format": "email" },
                "birthday": { "type": "string" },
                "password": { "type": "string" },
                "membershipLevel": { "type": "string" }
              },
              "required": [
                "firstName",
                "lastName",
                "username",
                "email",
                "birthday",
                "password",
                "membershipLevel"
              ]
            }
          }
        ],
        "responses": {
          "204": { "description": "User created successfully" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "description": "Get a user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "put": {
        "description": "Update a user",
        "consumes": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "username": { "type": "string" },
                "email": { "type": "string", "format": "email" },
                "birthday": { "type": "string" },
                "password": { "type": "string" },
                "membershipLevel": { "type": "string" }
              },
              "required": [
                "firstName",
                "lastName",
                "username",
                "email",
                "birthday",
                "password",
                "membershipLevel"
              ]
            }
          }
        ],
        "responses": {
          "204": { "description": "User updated successfully" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "204": { "description": "User deleted successfully" } }
      }
    }
  }
}
